extends layout

block main
  section#todos(class=isDoneTodoList ? "done" : "")
    header
      h2= todoList.title
      ul
        if hasUndoneTodos
          li
            form.complete_all(action=`/lists/${todoList.id}/complete_all`
                              method="post")
              button.check(type="submit") Complete All
        li
          form(action=`/lists/${todoList.id}/edit` method="get")
            button.edit(type="submit") Edit List

    ul
      each todo, index in todoList.todos
        li
          div.set-status-container
            form.set-status(action=`/lists/${todoList.id}/todos/${todo.id}/setStatus/no`
                           method="post")
              button(class=`${todoList.todos[index].done === "no" ? "active" : ""}`) To do
            form.set-status(action=`/lists/${todoList.id}/todos/${todo.id}/setStatus/partially`
                           method="post")
              button(class=`${todoList.todos[index].done === "partially" ? "active" : ""}`) Started
            form.set-status(action=`/lists/${todoList.id}/todos/${todo.id}/setStatus/yes`
                           method="post")
              button(class=`${todoList.todos[index].done === "yes" ? "active" : ""}`) Done
          h3= todo.title
          form.delete(action=`/lists/${todoList.id}/todos/${todo.id}/destroy`
                      method="post")
            button Delete

    form(action=`/lists/${todoList.id}/todos` method="post")
      dl
        dt
          label(for="todoTitle") Enter a new todo item:
        dd
          input(type="text"
                name="todoTitle"
                placeholder="Something to do"
                value=todoTitle)
      fieldset.actions
        button Add

block headerLinks
  .actions
    a.list(href="/lists") All Lists
